<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical">
 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout5"
        android:background="@color/blue_1">
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/baseline_arrow_back_24"
        android:layout_margin="20dp"
         android:layout_alignParentStart="true"
         android:id="@+id/img_back"
         android:onClick="back"
         ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            ></TextView>
        
    </LinearLayout>

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/img_profile"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_below="@+id/layout5"
         android:layout_centerInParent="true"
         android:layout_marginTop="10dp"
         android:src="@drawable/profile"
         app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>
     <ImageView
         android:layout_width="40dp"
         android:layout_height="35dp"
         android:src="@drawable/camera"
         android:layout_below="@+id/img_profile"
         android:layout_toRightOf="@+id/img_profile"
         android:layout_marginTop="-50dp"
         android:layout_marginLeft="95dp"
         android:id="@+id/img_changeprofile"
         ></ImageView>

     <TextView
         android:id="@+id/txt_pname"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/img_profile"
         android:layout_centerInParent="true"
         android:layout_marginTop="10dp"
         android:text="Aashwit Gupta"
         android:textSize="35sp"
         android:textStyle="bold"></TextView>

     <TextView
         android:id="@+id/txt_pemail"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/txt_pname"
         android:layout_centerInParent="true"
         android:layout_marginTop="5dp"
         android:text="aashwit@gmail.com"
         android:textSize="20dp"></TextView>
     <ImageView
         android:layout_width="28dp"
         android:layout_height="35dp"
         android:src="@drawable/baseline_info_24"
         android:layout_below="@id/txt_pemail"
         android:id="@+id/img_info"
         android:layout_marginLeft="10dp"
         ></ImageView>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/img_info"
         android:text="About"
         android:layout_below="@id/txt_pemail"
         android:layout_marginLeft="10dp"
         android:id="@+id/txt_profile_about"
         ></TextView>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Busy Right Now ,Not Receiving call"
         android:layout_below="@id/txt_profile_about"
         android:layout_toRightOf="@id/img_info"
         android:layout_marginLeft="12dp"
         android:id="@+id/txt_pabout"
         ></TextView>

     <ImageView
         android:id="@+id/img_changeabout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/txt_pemail"
         android:layout_alignParentEnd="true"
         android:layout_marginRight="50dp"
         android:src="@drawable/baseline_edit_24"
         android:textSize="18dp"></ImageView>
 </RelativeLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Account Info"
         android:textStyle="bold"
         android:textSize="40dp"
         android:layout_below="@+id/et_edit"
         android:id="@+id/txt_Account"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="10dp"
         android:fontFamily="casual"
         ></TextView>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/txt_Account"
         android:id="@+id/layout1"
         android:layout_marginLeft="10dp"
         >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/baseline_person_outline_24"
         android:id="@+id/txt_namelogo"
         android:textSize="40dp"
         android:textStyle="bold"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
         ></TextView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="NAME"
             android:id="@+id/txt_name"
             android:layout_toRightOf="@+id/txt_namelogo"
             android:textSize="18dp"
             android:textStyle="bold"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="10dp"
             ></TextView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Aashwit Gupta"
             android:textColor="@color/Black_1"
             android:id="@+id/txt_pname2"
             android:layout_below="@+id/txt_name"
             android:layout_toRightOf="@+id/txt_namelogo"
             android:textSize="18dp"
             android:textStyle="bold"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             ></TextView>


     </RelativeLayout>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/layout1"
         android:id="@+id/layout2"
         android:layout_marginLeft="10dp"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/baseline_alternate_email_24"
             android:id="@+id/txt_emaillogo"
             android:textSize="40dp"
             android:textStyle="bold"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="10dp"
             ></TextView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Email"
             android:id="@+id/txt_email"
             android:layout_toRightOf="@+id/txt_emaillogo"
             android:textSize="18dp"
             android:textStyle="bold"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="10dp"
             ></TextView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="aashwit@gmail.com"
             android:textColor="@color/Black_1"
             android:id="@+id/txt_useremail"
             android:layout_below="@+id/txt_email"
             android:layout_toRightOf="@+id/txt_emaillogo"
             android:textSize="18dp"
             android:textStyle="bold"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             ></TextView>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/layout2"
         android:id="@+id/layout3"
         android:layout_marginLeft="10dp"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/baseline_password_24"
             android:id="@+id/txt_passwordlogo"
             android:textSize="40dp"
             android:textStyle="bold"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="10dp"
             ></TextView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Password"
             android:id="@+id/txt_password"
             android:layout_toRightOf="@+id/txt_passwordlogo"
             android:textSize="18dp"
             android:textStyle="bold"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="10dp"
             ></TextView>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="********"
             android:textColor="@color/Black_1"
             android:id="@+id/txt_userpassword"
             android:layout_below="@+id/txt_password"
             android:layout_toRightOf="@+id/txt_passwordlogo"
             android:textSize="18dp"
             android:textStyle="bold"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             ></TextView>
     </RelativeLayout>
